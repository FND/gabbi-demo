#!/usr/bin/env bash

. venv/bin/activate

function launch {
	python app.py &
	echo $! > .server.pid
}

function terminate {
	kill `cat .server.pid`
	rm .server.pid
}

launch
gabbi-run localhost:5000 < test_json.yaml
terminate

launch
gabbi-run -r gabbi_html localhost:5000 < test_html.yaml
terminate
